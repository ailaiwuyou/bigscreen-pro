{
  "name": "@bigscreen/core",
  "version": "1.0.0",
  "description": "Core engine for BigScreen Pro - Canvas, interaction, and state management",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "@bigscreen/types": "workspace:*",
    "@bigscreen/utils": "workspace:*",
    "interactjs": "^1.10.27"
  },
  "publishConfig": {
    "access": "public"
  }
}
