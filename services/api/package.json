    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "docker:build": "docker build -t bigscreen-backend .",
    "docker:run": "docker run -p 3000:3000 bigscreen-backend"
